<h1>
   <% if @task.completed %>
        <i class="fa-regular fa-square-check"></i>
    <% else %>
        <i class="fa-regular fa-square"></i>
    <% end %>
        <%= @task.title %>
</h1>

<p><%= @task.details %></p>
<p><%= link_to "Edit task", edit_task_path %></p>
<p>
  <%= link_to "Delete task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</p>
<p><%= link_to "Back to list", tasks_path %></p>
